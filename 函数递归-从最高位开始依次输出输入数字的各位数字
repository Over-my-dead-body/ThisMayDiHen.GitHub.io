#include<stdio.h>
void print(int n){
	//核心思路-递归就是将原问题转化为与原问题相似的小问题 
	//递归两条件：1.递归有限制条件 2.每次递归完都接近这个限制条件 
	if(n>9){
		print(n/10);
		//进入下一层时外层函数未结束 
		//故实际运行过程为正着进入，逆着输出值 
		//还不明白多琢磨琢磨，或者看鹏哥p11的39分 
	}
	printf("%d ",n%10);
}
int main(){
	unsigned int num =0;
	scanf("%d",&num);
	print
	print(num);
	return 0;
} 
